<idea-plugin>
    <id>de.nordgedanken.auto_hot_key</id>
    <name>AutoHotKey Language</name>
    <vendor email="info@nordgedanken.de" url="https://github.com/Nordgedanken/">Nordgedanken</vendor>

    <description><![CDATA[
    A simple Plugin to bring the AutoHotKey Syntax highlighting into Jetbrains!
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <change-notes><![CDATA[
        <h2>1.0-SNAPSHOT</h2>
        <h3>Added</h3>
        <ul>
            <li>Initial Release</li>
            <li>Added most basic features</li>
        </ul>
    ]]></change-notes>

    <version>0.1.0</version>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="AHK script" implementationClass="de.nordgedanken.auto_hot_key.AHKFileType"
                  fieldName="INSTANCE" language="AutoHotKey" extensions="ahk"/>
        <lang.parserDefinition language="AutoHotKey"
                               implementationClass="de.nordgedanken.auto_hot_key.AHKParserDefinition"/>
        <lang.syntaxHighlighterFactory language="AutoHotKey"
                                       implementationClass="de.nordgedanken.auto_hot_key.AHKSyntaxHighlighterFactory"/>

        <colorSettingsPage implementation="de.nordgedanken.auto_hot_key.AHKColorSettingsPage"/>

        <lang.findUsagesProvider language="AutoHotKey"
                                 implementationClass="de.nordgedanken.auto_hot_key.AHKFindUsagesProvider"/>

        <lang.commenter language="AutoHotKey" implementationClass="de.nordgedanken.auto_hot_key.AHKCommenter"/>
    </extensions>

    <actions>
        <action id="AHK.NewAHKFile"
                class="de.nordgedanken.auto_hot_key.actions.AHKCreateFileAction"
                text="AutoHotKey File"
                description="Create new AutoHotKey file">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
        </action>
    </actions>
</idea-plugin>
